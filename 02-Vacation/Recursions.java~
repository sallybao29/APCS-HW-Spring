public class Recursions{
    private int[][] board;

    public void fill(int r, int c){
	board = new int[r][c];
	for (int i = 0; i < board.length;i++){
	    for (int j = 0; j < board[r].length;j++){
		board[i][j] = 0;
	    }
	}
    }

    public static void main(String args){
	Recursion r = new Recursion();
	r.fill(5, 5);
	System.out.println(r.board);
    }
    
    

}
